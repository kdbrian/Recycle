<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="category"
            type="io.github.junrdev.recycler.domain.model.WasteCategory" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/plastic_waste" />

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:backgroundTint="@color/plasticWasteColor"
            android:background="@drawable/fading_linear_gradient"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/luckiestguyregular"
            android:layout_height="wrap_content"
            android:textColor="@color/errorColor"
            android:text='@{category.category}'
            tools:text="Plastic"
            />

    </androidx.cardview.widget.CardView>
</layout>
